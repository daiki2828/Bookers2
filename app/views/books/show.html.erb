<div>
  <%= flash[:notice] %>
<div>

<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <%= render 'users/info', user: @books.user %>
   <%= render 'books/form', book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
   <table class="table table-striped">
    <thead>
    </thead>
    <tbody>
     <tr>
      <td><%= link_to user_path(@books.user.id) do %>
             <%= image_tag @books.user.get_profile_image(100,100) %>
             <p><%= @books.user.name %></p>
          <% end %></td>
      <td><%= link_to @books.title, book_path(@books.id) %></td>
      <td><%= @books.body %></td>
      <% if @books.user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@books), class:"btn btn-sm btn-success" %></td>
      <td><%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger"%></td>
       <% end %>
     </tr>
    </tbody>
   </table>
  </div>
 </div>
</div>